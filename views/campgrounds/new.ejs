<%- include ('../partials/header.ejs') %>


<div class="container">
    
    <div class="row">
        <h1 style="text-align: center">Create a New CampGround</h1>
        
        <div style="width: 40%; margin: 25px auto;">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="NAME" name="campground[name]"  maxlength="30" required>
                </div>
                
              <!--  <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image URL" name="url" required>
                </div>-->
				
				<div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*" >
                </div>
				
                
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Description" name="campground[description]" required  maxlength="200">
                </div>
				
				<div class="form-group">
                    <input class="form-control" type="number" placeholder="Price" name="campground[price]" min="0.0" step="0.1" required>
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                
            </form>
                
            <a class="btn btn-primary btn-lg" href="/campgrounds">Go Back...</a>
            
        </div>

        
        
       
    </div>

</div>
<%- include ('../partials/footer.ejs') %>