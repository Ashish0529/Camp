<%- include ('../partials/header.ejs') %>
		<div class="container">
			<div class="row">
				<div class="col-md-3">
					<p class="lead">
						Camps
					</p>
					<div class="list-group">
						<li class="list-group-item">Info 1</li>
						<li class="list-group-item">Info 2</li>
						<li class="list-group-item">Info 3</li>
					</div>
				</div>
				<div class="col-md-9">
					<div class="thumbnail">
						<img class="img-responsive" src="<%= campground.image %>" style="width:100%">
						<div class="caption-full">
							<h4 class="pull-right">
								$<%= campground.price %>/night
							</h4>
						<h4>
							<a style="word-wrap: break-word; width: 100px"><%= campground.name %></a>
							</h4>	
							<p style="word-wrap: break-word; width: 650px">
	                         <%= campground.description %>
                             </p>
							<p>
								<em>Submitted By <%= campground.author.username %>, <%= moment(campground.createdAt).fromNow() %></em>
							</p>
							<% if(currentUser && campground.author!=null){ %>
							<% if(campground.author.id.equals(currentUser._id)){ %>
							<a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-primary">Edit the Campground</a>
							<form  style="display: inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
								<button class="btn btn-danger">
									Delete
								</button>
							</form>
							<% } %>
							<% } %>
						</div>
					</div>
					<div class="well">
						<div class="text-right">
							<a  class="btn btn-primary" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
						</div>
						<hr>
						<% campground.comments.forEach(function(comment){ %>
	                 	<div class="row">
						<div class="col-md-12">
							<strong><%= comment.author.username %></strong>
							<span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
							<p>
								<%= comment.text %>
							</p>
							<% if(currentUser && comment.author){ %>
							<% if(comment.author.id.equals(currentUser._id)){ %>
							<a class="btn btn-xs btn-primary"  href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Edit Comment</a>
							<form  style="display: inline" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
								<button class="btn btn-danger btn-xs">
									Delete
								</button>
							</form>
							
						    <% } %>
							<% } %>
							<hr>
							</div>	
						</div>
		                <% });%>
					</div>
				</div>
			</div>
		</div>
<%- include ('../partials/footer.ejs') %>