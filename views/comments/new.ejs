<%- include ('../partials/header.ejs') %>


<div class="container">
    
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= campground.name %></h1>
        
        <div style="width: 40%;margin: 25px auto;">
			
            <form action="/campgrounds/<%= campground._id %>/comment" method="POST">
                
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="TEXT"  maxlength="200" name="comment[text]">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                
            </form>
                
            <a class="btn btn-primary btn-lg" href="/campgrounds">Go Back...</a>
            
        </div>

        
        
       
    </div>

</div>
<%- include ('../partials/footer.ejs') %>